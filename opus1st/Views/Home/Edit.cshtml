@model Product
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-12">
        <h3>Update Product</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <form asp-action="Add" asp-controller="Home" >
            <input asp-for="Id" type="hidden" class="form-control" />
            <div class="form-group row mb-1">
                <label asp-for="ProductName" class="col-form-label text-end col-2"></label>
                <div class="col-4">
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Quantity" class="col-form-label text-end col-2"></label>
                <div class="col-4">
                    <input type="text" asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Price" class="col-form-label text-end col-2"></label>
                <div class="col-4">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                
                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section scripts{
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

